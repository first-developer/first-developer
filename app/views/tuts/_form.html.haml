= form_for(@tut) do |f|
  - if @tut.errors.any?
    #error_explanation
      %h2
        = pluralize(@tut.errors.count, "error")
        prohibited this tut from being saved:
      %ul
        - @tut.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :duration
    %br/
    = f.text_field :duration
  .field
    = f.label :category
    %br/
    = f.text_field :category
  .field
    = f.label :slug
    %br/
    = f.text_field :slug
  .actions
    = f.submit
