<% date = Time.now.strftime("le %m %B %Y  à  %I:%M")  %>

<div class="fd_login">
  <% 
=begin %>

  <section class="fd_login_image">
      <img src="../images/user-design.png" >
  </section>"
<% 
=end %>
  <div id="fd_login">
    <span class="fd_article_title">
      <span class="fd_article_info_mark fd_post_info_mark">
        <span class="fd_article-type-icon login"></span>
      </span>
      <span class="fd_article_info_title">
        <hgroup>
          <h3 class="">Se connecter / S'incrire </h3>
          
        </hgroup>
      </span>
    </span>
    <%= simple_form_for ""  do |f| %>
    <section class="fd_login_input">
      <%= f.input :email, :label => false, :wrapper_html => { :class => 'fd_login_input_username'} %>
      <%= f.input :password, :label => false , :wrapper_html => { :class => 'fd_login_input_password'} %>
      <p class="alert-message block-message warning">Vous avez oublier votre mot de passe ? <a href="">Cliquez ici</a> pour le réinitialiser</p>

      <div class ="well">
        <a href="#sign_in_form" class="btn danger space_right-1">créer un compte</a>
        <input type="submit" class="btn primary  space_right-1" value="se connecter">
      </div>
    </section>
    <% end %>
  </div>
  <div id="fd_sign_in">
    <section class="fd_login_input" id="sign_in_form">
      <%= render "layouts/section", :section_title => "ou créer un compte", :section_content => nil, :section_title_class => "red"   %>
        <%= simple_form_for ""  do |f| %>
          <%= f.input :firstname, :label => "nom", :wrapper_html => { :class => 'fd_login_input_standart'} %>
          <%= f.input :lastname,  :label =>  "prenom", :wrapper_html => { :class => 'fd_login_input_standart'} %>
          <%= f.input :email, :label => false, :wrapper_html => { :class => 'fd_login_input_username'} %>
          <%= f.input :password, :label => false , :wrapper_html => { :class => 'fd_login_input_password'} %>
          <%= f.input :confirmation_password, :as => :boolean, :label => "Confirmation du mot de passe", :wrapper_html => { :class => 'fd_login_input_checkbox'} %>
          <div class ="well">
            <input type="submit" value="créer le compte" class="btn danger space_right-1">
            <input type="reset" class="btn primary  space_right-1" value="tout effacer">
          </div>
        </section>
        <% end %>
    </section>
  </div>
</div>
