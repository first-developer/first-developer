= form_for entry, :html => { :class => 'form-horizontal' } do |f|
  %article.fd-ui-tl-item.fd-ui-slot-container{:id => ""}
    %span.fd-ui-icon.post
    %span.fd-ui-tl-item-indic
    %header.fd-ui-tl-item-hd
      %span.fd-ui-avt.small.default{:style => "background-image:url(#{asset_path("ui/fd-ui-ux-sprite.png");})"}
      .fd-ui-actions.btns{:id => ""}
        %i.fd-ui-icons.icon-more.fd-ui-btn{:rel => "tooltip", :title => "more"}
    .fd-ui-tl-item-ct{:id => ""}
      .fd-ui-tl-item-ct-el.full-size{:id => ""}
        %hgroup.fd-ui-tl-item-title
          %h4
            By
            %span.author Nathan Pitman
            | #{time_info(Time.now)}
          %h1
            = f.text_field :title,                        |
              class: "text_field title-for-content-slot", |
              placeholder: "Enter title here â€¦"           |
        .fd-ui-item-ct-text
          = f.text_area :body,                        |
            class: 'text_area body-for-content-slot', |
            placeholder: "What's up dude ? "          |
  = render "shared/category_slot"
  .fd-ui-tl-item-ct-el.full-bg{:id => ""}
    %i.icon-tags.slot-label
    %input.entry-tags-slot{:type => "text", :value => ""}/
  .fd-ui-tl-item-ct-el.full-bg{:id => ""}
    %p.fd-ui-checkbox
      %input.checkbox-slot{:type => "checkbox"}>/
      Publish this post.
  = render "shared/action_btns_slot"
  %footer.fd-ui-tl-item-ft
  %fieldset
    %legend
      = controller.action_name.capitalize
      Entry
    .control-group
      = f.label :title, :class => 'control-label'
      .controls
        = f.text_field :title, :class => 'text_field'
    .control-group
      = f.label :body, :class => 'control-label'
      .controls
        = f.text_area :body, :class => 'text_area'
    .control-group
      = f.label :published, :class => 'control-label'
      .controls
        = f.check_box :published, :class => 'check_box'
    .form-actions
      = f.submit "create entry", :class => 'btn btn-primary'
      = link_to 'Cancel', entries_path, :class => 'btn'
